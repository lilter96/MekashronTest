@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels

<nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon pt-1">Menu</span>
      </button>
      <div class=" collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto ">
          <li class="nav-item">
            <a class="nav-link mx-2 active" aria-current="page" href="/home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link mx-2 active" aria-current="page" href="/profile">Profile</a>
          </li>
          @if (User.Identity.IsAuthenticated)
          {
            <li class="nav-item rounded">
              @using (Html.BeginUmbracoForm("Logout", "AuthSurface", FormMethod.Post))
              {
                <button class="nav-link mx-2 active bg-dark border rounded" aria-current="page" type="submit">Sign Out</button>
              }
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link mx-2 active bg-dark border rounded" href="/login">Sign in</a>
            </li>
          }
        </ul>
      </div>
    </div>
</nav>